#!/bin/bash

srcUSER=localcosadmin

cat <<-ZENITY | su - localcosadmin -s /bin/bash
	DISPLAY=:11 zenity		\
		--question		\
		--timeout=10		\
		--ok-label="Allow"	\
		--cancel-label="NO"	\
		--title="Remote user attempting connection ALLERT"\
		--text="User \"${srcUSER}\" wants to share your desktop"
	echo result \$?
	ZENITY
echo result $?



exit




                local dlgOPTS=(
                        --question
                        --timeout=10
                        --ok-label=\"Allow\"
                        --cancel-label=\"NO\"
                        --title=\"Remote user attempting connection ALLERT\"
                        --text=\"User \\\"${srcUSER}\\\" wants to share your desktop\"
                )
                su - localcosadmin    \
                        -s /bin/bash            \
                        -c "DISPLAY=:11 zenity ${dlgOPTS[*]}"





exit

		root_home=$(grep ^root /etc/passwd | cut -d: -f6)
		echo $root_home


		#while read ALIAS; do
                 #       echo $ALIAS
                        cat <<-SED | sed -n -f <(cat) "aliases" | while read name; do
                                /^alias[[:space:]]/{
                                        s/^alias[[:space:]]\+\([^=]\+\).*/\1/p
                                }
			SED
				echo $name

			done
