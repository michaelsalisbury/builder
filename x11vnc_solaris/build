#!/bin/bash
shopt -s extglob

function main(){
	local version_num=`GET_VERSION`
	local version_dir="${BASH_SRCDIR}/${NAME}.v${version_num}"
	mkdir -p "${version_dir}"
	# compress and split
	cd "${BASH_SRCDIR}"
	tar -cz `GET_FILES` | split -b ${MAX_SPLIT} - "${version_dir}/${NAME}.v${version_num}.tgz"_
	# write LATEST.TXT
	cd "${version_dir}"
	ls



}
function GET_VERSION(){
	# requires; shopt -s extglob
	local major=""
	for major in ${majors}; do
		ls -1 "${BASH_SRCDIR}/${major}".v+([0-9])           2>/dev/null
		ls -1 "${BASH_SRCDIR}/REVISIONS/${major}".v+([0-9]) 2>/dev/null
	done		|\
	sed 's/.*\.v//'	|\
	sort -n -u	|\
	tail -1
}
function GET_FILES(){
	local major=""
	cd "${BASH_SRCDIR}"
	for major in ${majors}; do
		ls -1 ${major}
	done
	local include=""
	for include in ${includes}; do
		ls -1 ${include}
	done
}
function canonicalpath(){
	if [ -d $1 ]; then
		pushd $1 > /dev/null 2>&1
		echo $PWD
	elif [ -f $1 ]; then
		pushd $(dirname $1) > /dev/null 2>&1
		echo $PWD/$(basename $1)
	else
		echo "Invalid path $1"
	fi
	popd > /dev/null 2>&1
}
# GLOBAL vars; fully qualified script paths and names
BASH_SRCFQFN=$(canonicalpath "${BASH_SOURCE}")
BASH_SRCNAME=$(basename "${BASH_SRCFQFN}")
BASH_SRCDIR=$(dirname "${BASH_SRCFQFN}")

# MAX split file size
MAX_SPLIT='10M'

# Project NAME
NAME='x11vnc'

# Projects major scripts
read -d $'' majors <<-EOE
	Xvnc-dynamic.sh
	x11vnc.sh
	xstartup
EOE
# Projects support files
read -d $'' includes <<-EOE
	install.*
	xinetd.*
	allowed.*
	tigervnc-*
	x11vnc-*
	LATEST.TXT
	aliases
EOE

main "$@"
